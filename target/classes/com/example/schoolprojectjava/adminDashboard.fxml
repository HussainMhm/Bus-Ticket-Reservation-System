<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schoolprojectjava.AdminDashboardController">
   <children>
      <Label layoutX="167.0" layoutY="44.0" text="Admin Dashboard">
         <font>
            <Font name="Gill Sans" size="36.0" />
         </font>
      </Label>
      <Button fx:id="addBusBtn" layoutX="200.0" layoutY="165.0" mnemonicParsing="false" onAction="#goToAddBus" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #6753dd#6753dd; -fx-background-radius: 50;" text="View/Add New Bus" textFill="WHITE">
         <font>
            <Font name="Gill Sans" size="14.0" />
         </font></Button>
      <Button fx:id="viewBookingBtn" layoutX="200.0" layoutY="221.0" mnemonicParsing="false" onAction="#goToViewBooking" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #6753dd#6753dd; -fx-background-radius: 50;" text="View All Bookings" textFill="WHITE">
         <font>
            <Font name="Gill Sans" size="14.0" />
         </font></Button>
      <Button fx:id="backBtn" layoutX="200.0" layoutY="345.0" mnemonicParsing="false" onAction="#signOut" prefHeight="30.0" prefWidth="200.0" style="-fx-background-color: #f061c0#f061c0; -fx-background-radius: 25;" text="Sign Out" textFill="WHITE">
         <font>
            <Font name="Gill Sans" size="14.0" />
         </font></Button>
      <Button fx:id="viewAllUsersBtn" layoutX="200.0" layoutY="277.0" mnemonicParsing="false" onAction="#goToViewUsers" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #6753dd#6753dd; -fx-background-radius: 50;" text="View All Users" textFill="WHITE">
         <font>
            <Font name="Gill Sans" size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
